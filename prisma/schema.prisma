generator client {
  provider        = "prisma-client-js"
  output          = "../src/generated/prisma"
  engineType      = "binary"
  previewFeatures = ["clientExtensions"] // ‚Üê enable JS output mode
}

datasource db {
  provider = "postgresql"
}

model Product {
  id String @id @default(cuid())
  userId String // Stack Auth user id
  name String
  sku String? @unique
  price Decimal @db.Decimal(12, 2)
  quantity Int @default(0)
  lowStockAt Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sales     Sales[]

  @@index([userId, name])
  @@index([createdAt])
}
model Sales {
  id String @id @default(cuid())
  userId    String
  productId String
  sku       String?
  product   Product @relation(fields: [productId], references: [id])
  productName String
  quantity  Int
  price Float
  totalRevenue Float
  saleDate  DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
// New Models
model ProductList {
  id        String   @id @default(cuid())
  sku       String   @unique
  name      String
  price     Float
  packSize  Int
  weightValue Float
  weightUnit String
  createdBy String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  inventories Inventory[]
  sales       Sale[]
}

model Customer {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  phone     String
  country   String
  city      String
  createdBy String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sales     Sale[]
}

model Inventory {
  id        String   @id @default(cuid())
  productId String
  productName String
  location  String
  quantity  Int
  lowStockAt Int
  createdBy String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  product   ProductList @relation(fields: [productId], references: [id])
}

model Sale {
  id        String   @id @default(cuid())
  customerId String
  productId String
  productName String
  quantity  Int
  salePrice Float
  totalAmount Float
  createdBy String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  customer  Customer @relation(fields: [customerId], references: [id])
  product   ProductList @relation(fields: [productId], references: [id])
}
