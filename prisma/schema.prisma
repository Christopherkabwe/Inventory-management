generator client {
  provider        = "prisma-client-js"
  output          = "../src/generated/prisma"
  engineType      = "binary"
  previewFeatures = ["clientExtensions"] // ‚Üê enable JS output mode
}

datasource db {
  provider = "postgresql"
}

// -------------------- PRODUCTS --------------------
model ProductList {
  id          String      @id @default(cuid())
  sku         String      @unique
  name        String
  price       Float
  packSize    Int
  category    String?
  weightValue Float
  weightUnit  String
  createdBy   String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  inventories Inventory[]
  sales       Sale[]
  transfers   Transfer[]
  productions Production[]
  adjustments Adjustment[]

  @@index([sku])
}

// -------------------- INVENTORY --------------------
model Inventory {
  id         String      @id @default(cuid())
  productId  String
  product    ProductList @relation(fields: [productId], references: [id])
  locationId String
  location   Location    @relation(fields: [locationId], references: [id])
  quantity   Int
  lowStockAt Int
  expiryDate DateTime?
  createdBy  String
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@unique([productId, locationId])
  @@index([productId])
}

// -------------------- LOCATIONS --------------------
model Location {
  id        String   @id @default(cuid())
  name      String   @unique
  address   String?
  createdBy String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  inventories Inventory[]
  sales       Sale[]
  transfersFrom Transfer[] @relation("TransfersFrom")
  transfersTo   Transfer[] @relation("TransfersTo")
  adjustments   Adjustment[]
}

// -------------------- CUSTOMERS --------------------
model Customer {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  phone     String
  country   String
  city      String
  createdBy String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sales Sale[]
}

// -------------------- SALES --------------------
model Sale {
  id String @id @default(cuid())
  customerId String
  customerName String
  customer Customer @relation(fields: [customerId], references: [id])
  productId String
  product ProductList @relation(fields: [productId], references: [id], onDelete: Cascade)
  locationId String
  location Location @relation(fields: [locationId], references: [id])
  quantity Int
  salePrice Float
  totalAmount Float
  saleDate DateTime @default(now())
  isReturn Boolean @default(false) // track returns
  createdBy String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([customerId])
  @@index([productId])
}

// -------------------- TRANSFERS (IBT) --------------------
model Transfer {
  id             String      @id @default(cuid())
  productId      String
  product        ProductList @relation(fields: [productId], references: [id])
  fromLocationId String?
  fromLocation   Location?   @relation("TransfersFrom", fields: [fromLocationId], references: [id])
  toLocationId   String?
  toLocation     Location?   @relation("TransfersTo", fields: [toLocationId], references: [id])
  quantity       Int
  transferDate   DateTime    @default(now())
  createdBy      String
  createdAt      DateTime    @default(now())
}

// -------------------- PRODUCTION --------------------
model Production {
  id          String      @id @default(cuid())
  productId   String
  product     ProductList @relation(fields: [productId], references: [id])
  quantity    Int
  createdBy   String
  createdAt   DateTime    @default(now())
}

// -------------------- ADJUSTMENTS --------------------
model Adjustment {
  id          String      @id @default(cuid())
  productId   String
  product     ProductList @relation(fields: [productId], references: [id])
  locationId  String
  location    Location    @relation(fields: [locationId], references: [id])
  type        String      // 'REBAG_GAIN', 'REBAG_LOSS', 'DAMAGED', 'EXPIRED', etc.
  quantity    Int
  reason      String?     // optional note
  createdBy   String
  createdAt   DateTime    @default(now())
}



