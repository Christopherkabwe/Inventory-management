{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2023",
    "strict": true,
    "esModuleInterop": true,
    "ignoreDeprecations": "6.0",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "src/components/SalesTonnageByLocation.tsx",
    "src/app/api/[sales]/route.js",
    "src/app/api/customers/route.ts",
    "src/components/RecentSales.Clienttsx",
    "src/app/context/Toaster.js",
    "next.config.ts",
    "src/app/(pages)/dashboard/ClientRedirect.js",
    "src/app/api/rbac/sales/create-sale-from-quotation"
  ],
  "exclude": [
    "node_modules"
  ]
}